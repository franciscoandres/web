html{box-sizing:border-box;font-size:18px;font-family:Arial,Helvetica,sans-serif}*,*:before,*:after{box-sizing:inherit}body{background-color:#0a0a0c;color:#fff;max-width:45rem;margin:0 auto;padding:2rem 1rem;line-height:1.5}img{display:block;height:auto;width:100%}h1{font-size:1.75rem}a{color:#728de7}a:hover{color:#3158dc}p{font-size:1rem}h1{color:#fffffe}p{color:#ebeef3}nav a{display:inline-block;margin-right:.5rem}article h1{margin-bottom:0}article p{margin-top:0}.dib{display:inline-block}.mb0{margin-bottom:0}.mr05{margin-right:.5rem}.mb4{margin-bottom:4rem}.list-unstyled{list-style-type:none;padding-left:0}.grid-projects{display:grid;grid-template-columns:auto;column-gap:2rem;row-gap:2.5rem}.highlight{margin-bottom:1rem}@media screen and (max-width:400px){.grid-projects{display:grid;grid-template-columns:auto;column-gap:2rem;row-gap:1rem}}